{
  "Format": "2.3.0",
  "ConfigSchema": {
    "EnableMinecart": {
      "AllowValues": "true, false",
      "Default": true,
    },
    "EnableConstructionMenu": {
      "AllowValues": "true, false",
      "Default": true,
    }
  },
  "Changes": [
    // Location
    {
      "Action": "Load",
      "Target": "Maps/FarmCave",
      "FromFile": "assets/FarmCave.tmx"
    },
    {
      "Action": "Load",
      "Target": "Mods/{{ModId}}/FarmCaveHoeDirt",
      "FromFile": "assets/{{TargetWithoutPath}}.png"
    },
    {
      "Action": "EditData",
      "Target": "Data/Machines",
      "TargetField": [
        "(BC)128",
        "OutputRules",
        "Default",
        "OutputItem"
      ],
      "Entries": {
        "{{ModId}}_MagmaCap_(O)851": {
          "Id": "{{ModId}}_MagmaCap_(O)851",
          "Condition": "RANDOM .025",
          "ItemId": "(O)851"
        }
      },
      "MoveEntries": [
        {
          "Id": "{{ModId}}_MagmaCap_(O)851",
          "ToPosition": "Top"
        }
      ]
    },
    {
      "Action": "EditData",
      "Target": "Data/Locations",
      "TargetField": [
        "FarmCave"
      ],
      "Entries": {
        "DisplayName": "[LocationName Farm]{{i18n:FarmCave.DisplayName}}",
        "Music": [
          {
            "Id": "VolcanoMines",
            "Track": "VolcanoMines",
            "Condition": "RANDOM .20"
          }
        ],
        "MusicDefault": "Volcano_Ambient",
        "FishAreas": {
          "FarmCave": {
            "CrabPotJunkChance": 1.0
          }
        },
        "Fish": [
          {
            "Chance": 1.0,
            "Id": "FarmCave_Junk",
            "RandomItemId": [
              "(O)80", // quartz
              "(O)82", // fire quartz
              "(O)330", // clay
              "(O)378", // copper ore
              "(O)380", // iron ore
              "(O)382", // coal
              "(O)384", // gold ore
              "(O)390", // stone
            ]
          },
        ],
        "CustomFields": {
          "mushymato.MMAP/HoeDirt.texture": "Mods/{{ModId}}/FarmCaveHoeDirt",
        }
      },
    },
    // Make configs for these later, or maybe not :)
    // Optional: Add farm cave to minecart network
    {
      "Action": "Include",
      "FromFile": "data/minecart.json",
      "When": {
        "EnableMinecart": true
      }
    },
    // Optional: Show a table that opens the carpenter's if MMAP is installed
    {
      "Action": "Include",
      "FromFile": "data/construct.json",
      "When": {
        "HasMod": "mushymato.MMAP",
        "EnableConstructionMenu": true
      }
    },
  ]
}